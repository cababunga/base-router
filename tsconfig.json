{
  "compilerOptions": {
    "target": "es2023",
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDirs": ["./src"],
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
